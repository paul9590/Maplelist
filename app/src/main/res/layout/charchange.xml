                            android:id="@+id/TxtChoose6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center"
                            android:text=""/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ImgChoose7"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:scaleType="center"
                            android:background="@drawable/layoutshape"/>


                        <ImageView
                            android:id="@+id/ImgChoose8"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="30dp"
                            android:scaleType="center"

                            android:background="@drawable/layoutshape"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/TxtChoose7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""/>

                        <TextView
                            android:id="@+id/TxtChoose8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:gravity="center"
                            android:text=""/>

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/BtnBac"
            android:layout_width="53dp"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="275dp"
            android:layout_marginBottom="5dp"
            android:text="닫기"
            android:textSize="8dp" />

        <Button
            android:id="@+id/BtnCreate"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:text="캐릭터 추가"
            android:textSize="8dp" />

        <Button
            android:id="@+id/BtnDestroy"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="5dp"
            android:text="캐릭터 삭제"
            android:textSize="8dp" />

    </FrameLayout>

